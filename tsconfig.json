{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build",
        "preserveConstEnums": true,
        "removeComments": true,
        "rootDir": "./src",
        "sourceMap": true,
        "target": "ES2018"
    },
    "exclude": [
        "build/**/*",
        "dist/**/*",
        "examples/**/*",
        "./**/*.spec.*"
    ]
}
